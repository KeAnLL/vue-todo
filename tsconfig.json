  "include": ["env.d.ts", "src/**/*.ts", "src/**/*.vue"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "isolatedModules": true,
    "strict": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
